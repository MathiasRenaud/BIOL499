% Title page %
\newcommand{\UWtitle}[3]{
	\begin{singlespace}
	\begin{titlepage}
	\begin{center}
	{\bf \MakeUppercase {University of Waterloo}} \\
	{\bf Faculty of Science}

	\vfill

	{
		\large
		\textsc{\bf {#1}}
	}

	\vfill

	#2

	\vfill
	
	Prepared by \\ [1em]
	#3
	
	\end{center}
	\end{titlepage}
	\end{singlespace}
}



